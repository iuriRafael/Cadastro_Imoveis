<!DOCTYPE html>
<html>
<head>
    <title>Cadastro</title>
    <link rel="stylesheet" type="text/css" href="css/home.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
</head>

<body>  
  <%- include('alertes/alert.ejs', { message: successMessage }) %>

  <div class="tudo">
    <main class="px-3">
        <h3 class="subtitle">IMOVEIS QUE COMBINAM ESTILO E CONFORTO EM UM ÚNICO ESPAÇO</h3>
        <a href="/imoveis"><button type="button" class="btn btn-lg explorebtn" style="background-color: blue; margin-top: 10px; color: aliceblue;">ANUNCIE AQUI</button></a>
    </main>
  </div>
 
  <div class="container" style="margin-top: 30px;">
    <div class="row">
      <% for (const imovel of imoveis) { %>
        <div class="col-md-4 mb-4">
          <div class="card" style="width: 100%;">
            <img src="/uploads/<%= imovel.image_url %>" class="card-img-top" alt="Property Image" style="height: 300px; width: 100%;">
            <div class="card-body">
              <h5 class="card-title"><%= imovel.description %></h5>
              <p class="card-text"><strong>Endereço:</strong> <%= imovel.address %></p>
              <p class="card-text"><strong>Telefone:</strong> <%= imovel.phone_number %></p>
              <p class="card-text"><strong>Valor:</strong> <%= imovel.value %></p>
              <div class="li" style="display: flex; gap: 30px;">
                <a href="/editar/<%= imovel.id %>" class="btn btn-primary">Editar</a>
                <form action="/excluir/<%= imovel.id %>" method="post">
                  <input type="hidden" name="id">
                  <button type="submit" class="btn btn-danger">Excluir</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </div>
  
</body>
<script src="./alertes/alert.ejs"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
</html>

   